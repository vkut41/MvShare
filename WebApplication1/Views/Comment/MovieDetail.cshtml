@model WebApplication1.Models.Movie

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@Model.Title - DFT Video</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="~/css/movie-detail.css">
    <style>
        /* Загальні стилі для контенту */
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f4f4f9;
            margin: 0;
            padding: 0;
        }

        .container {
            display: flex;
            justify-content: center;
            padding: 40px;
            flex-wrap: wrap;
        }

        .movie-poster {
            width: 300px;
            height: 450px;
            border-radius: 15px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            margin-right: 40px;
            transition: transform 0.3s ease;
        }

            .movie-poster:hover {
                transform: scale(1.05);
            }

        .movie-details {
            max-width: 700px;
            width: 100%;
        }

        .movie-title {
            font-size: 36px;
            color: #333;
            margin-bottom: 10px;
        }

        .movie-rating {
            font-size: 20px;
            color: #f39c12;
            margin-bottom: 20px;
        }

        .movie-description {
            font-size: 18px;
            color: #555;
            margin-bottom: 20px;
        }

        /* Пошукова форма */
        .back-link {
            display: inline-block;
            font-size: 18px;
            color: #3498db;
            margin-bottom: 20px;
            text-decoration: none;
            font-weight: bold;
            border: 1px solid #3498db;
            padding: 10px 20px;
            border-radius: 25px;
            transition: all 0.3s ease;
        }

            .back-link:hover {
                background-color: #3498db;
                color: white;
            }

        /* Зірковий рейтинг */
        .star-rating {
            display: flex;
            margin-bottom: 20px;
        }

            .star-rating i {
                font-size: 30px;
                color: #f1c40f;
                cursor: pointer;
                margin-right: 5px;
                transition: color 0.3s ease;
            }

                .star-rating i:hover {
                    color: #e67e22;
                }

                .star-rating i.active {
                    color: #e67e22;
                }

        /* Форма для коментаря */
        #comment-form {
            display: flex;
            flex-direction: column;
            margin-top: 30px;
        }

            #comment-form textarea {
                padding: 10px;
                margin-bottom: 10px;
                border-radius: 10px;
                border: 1px solid #ccc;
                resize: vertical;
                min-height: 100px;
                font-size: 16px;
            }

            #comment-form button {
                padding: 10px 20px;
                border-radius: 25px;
                background-color: #f39c12;
                border: none;
                color: white;
                font-size: 16px;
                cursor: pointer;
                transition: all 0.3s ease;
            }

                #comment-form button:hover {
                    background-color: #e67e22;
                }

        /* Коментарі */
        #comment-section {
            margin-top: 40px;
        }

            #comment-section h3 {
                font-size: 24px;
                color: #333;
                margin-bottom: 15px;
            }

        .comment {
            background-color: white;
            padding: 20px;
            margin-bottom: 15px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

            .comment p {
                margin: 5px 0;
                color: #333;
            }

        .comment-stars i {
            color: #f1c40f;
        }
    </style>
</head>
<body>
    <div class="container">
        <div>
            <img src="~/images/movies/@Model.PosterUrl" alt="@Model.Title" class="movie-poster" />
            <a href="/" class="back-link">Back to the Home Page</a>
        </div>
        <div class="movie-details">
            <h2 class="movie-title">@Model.Title</h2>
            <div class="movie-rating">
                IMDb: @Model.Rating.ToString("0.0")
            </div>
            <p class="movie-description"><strong>Description:</strong> @Model.Description</p>

            @if (User.Identity.IsAuthenticated)
            {
                <div class="star-rating" id="star-rating">
                    <i class="far fa-star" data-rating="1"></i>
                    <i class="far fa-star" data-rating="2"></i>
                    <i class="far fa-star" data-rating="3"></i>
                    <i class="far fa-star" data-rating="4"></i>
                    <i class="far fa-star" data-rating="5"></i>
                </div>

                <form id="comment-form" method="post" asp-controller="Comment" asp-action="AddComment">
                    <input type="hidden" name="movieId" value="@Model.Id">
                    <input type="hidden" name="author" value="@User.Identity.Name">
                    <input type="hidden" name="rating" id="user-rating" value="0">
                    <textarea name="content" id="comment-content" placeholder="Write your comment here..."></textarea>
                    <button type="submit">Submit Comment</button>
                </form>
            }
            else
            {
                <p>Please <a href="/Auth/Login">log in</a> to rate the movie and submit a comment.</p>
            }

            <div id="comment-section">
                <h3>Comments</h3>
                @foreach (var comment in Model.Comments)

                {
                    <div class="comment">
                        <p>
                            <strong>@comment.Author</strong> -
                            <span class="comment-stars">
                                @for (int i = 0; i < comment.Rating; i++)

                                {
                                    <i class="fas fa-star"></i>
                                }
                            </span>
                            <span>@comment.Date.ToString("yyyy-MM-dd HH:mm")</span>
                        </p>
                        <p>@comment.Content</p>
                    </div>
                }
            </div>
        </div>
    </div>

    <script src="~/js/movie-detail.js"></script>
</body>
</html>
